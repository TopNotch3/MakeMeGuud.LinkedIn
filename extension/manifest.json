{
    "manifest_version": 3,
    "name": "LinkedIn AI Profile Coach",
    "version": "0.1.0",
    "description": "Analyzes your LinkedIn profile to provide AI-powered feedback.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://www.linkedin.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }