{
    "manifest_version": 3,
    "name": "LinkedIn AI Profile Coach",
    "version": "0.1.0",
    "description": "Analyzes your LinkedIn profile to provide AI-powered feedback.",
    "permissions": [
      "activeTab",
      "scripting",
      "sidePanel"
    ],
    "host_permissions": [
      "https://www.linkedin.com/*"
    ],
    "action": {
      "default_title": "Open AI Coach"
    },
    "background": {
      "service_worker": "background.js"
    },
    "side_panel": {
      "default_path": "index.html"
    },
    "web_accessible_resources": [
      {
        "resources": ["content.js"],
        "matches": ["https://www.linkedin.com/*"]
      }
    ]
  }